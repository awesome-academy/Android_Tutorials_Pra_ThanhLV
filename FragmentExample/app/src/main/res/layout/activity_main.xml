<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/define_dimen_150"
        android:layout_height="@dimen/define_dimen_150"
        android:layout_below="@+id/fragmentContainer"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentContainer"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/img"
        android:text="@string/title"
        android:textSize="@dimen/define_dimen_20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/define_dimen_10"
        android:layout_toRightOf="@+id/img"
        android:padding="@dimen/define_dimen_5"
        android:text="@string/content"
        android:textSize="@dimen/define_dimen_18" />
</RelativeLayout>
